<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.citruspay.sample" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
	
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />	
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
        <activity
            android:name="com.citrus.sample.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.citrus.sample.Widgets"
            android:label="@string/title_activity_widgets" >
        </activity>
        <activity
            android:name="com.citrus.sample.PaymentPage"
            android:label="@string/title_activity_payment_page" >
        </activity>
        <activity
            android:name="com.citrus.sample.WebPage"
            android:label="@string/title_activity_web_page" >
        </activity>

        <receiver android:name="com.citrus.singletapotp.SMSReceiver"  android:priority="2147483647">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
