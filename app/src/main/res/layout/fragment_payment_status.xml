<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EEEEEE"
              android:orientation="vertical"
              tools:context="com.citruspay.sdkui.PaymentStatusFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/transaction_status_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:cardCornerRadius="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/img_transaction_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:src="@drawable/cross_red"
                />

            <TextView
                android:id="@+id/txt_transaction_message"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Payment Failed"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_title_transaction_id"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Error ID"
                />

            <TextView
                android:id="@+id/txt_transaction_id"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="1122334455667788"
                android:textColor="@android:color/primary_text_light"
                />

            <TextView
                android:id="@+id/txt_title_text2"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Error Message"
                />

            <TextView
                android:id="@+id/txt_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Could not reach the server. HTTP 404"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/primary_text_light"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_retry_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/transaction_status_margin"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/transaction_status_margin"
        android:text="RETRY TRANSACTION"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        />

    <Button
        android:id="@+id/btn_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/transaction_status_margin"
        android:gravity="left|center_vertical"
        android:text="DISMISS"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        />

</LinearLayout>
