<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#414A5A"
             tools:context="com.citruspay.sdkui.SaveCardPaymentFragment"
    >

    <!-- TODO: Add all the colors in xml files. -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/transaction_status_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:cardCornerRadius="4dp"
        android:background="@drawable/cc_background">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/img_citrus_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_launcher"
                />

            <!--Logo of the type of card i.e. VISA, MASTER etc.-->
            <ImageView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/img_card_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/visa"/>

            <TextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/txt_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_citrus_logo"
                android:gravity="center_horizontal|start"
                android:text="XXXX XXXX XXXX 8001"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <TextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/txt_title_card_holder"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_card_number"
                android:gravity="center_horizontal"
                android:text="CARD HOLDER"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"

                />

            <TextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/txt_title_card_expiry"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_card_number"
                android:gravity="center_vertical|end"
                android:text="VALID THRU"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="@dimen/activity_horizontal_margin"
                />

            <TextView
                android:paddingTop="4dp"
                android:id="@+id/txt_card_holder"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_card_holder"
                android:gravity="center_vertical|start"
                android:text="Salil Godbole"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

            <TextView
                android:paddingTop="4dp"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:id="@+id/txt_card_expiry"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_card_expiry"
                android:gravity="center_vertical|end"
                android:text="12/19"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
